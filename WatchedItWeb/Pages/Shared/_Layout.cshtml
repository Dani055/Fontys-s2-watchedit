<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WatchedItWeb</title>
    <link rel="stylesheet" href="~/css/reset.css">
    <link rel="stylesheet" href="~/css/header.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/responsive.css">

</head>
<body>
    <div class="site">
        <header>
            <div class="wrapper">
                <a class="logo" asp-page="/Index">W a t c h e d I T</a>
                <nav>
                    <ul>
                        <li>
                            <a asp-page="/Movies/AllMovies">All movies</a>
                        </li>
                        <li>
                            <a asp-page="/Movies/MovieDetails">Movie details</a>
                        </li>
                        <li>
                            <a asp-page="/Series/AllSeries">All series</a>
                        </li>
                        <li>
                            <a asp-page="/Series/SeriesDetails">Series details</a>
                        </li>
                        <li>
                            <a asp-page="/Movies/AddMovie">Add movie</a>
                        </li>
                        <li>
                            <a asp-page="/Series/AddSeries">Add series</a>
                        </li>
                        <li>
                            <a asp-page="/Login">Login</a>
                        </li>
                        <li>
                            <a asp-page="/Register">Register</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>
        <main role="main">
            @RenderBody()
        </main>

        <footer>
            <div class="wrapper">
                <p>WatchedIT</p>
                <p>Copyright © since 2002 - WatchedIT</p>
            </div>
        </footer>
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
